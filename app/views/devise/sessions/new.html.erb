<h2 class="m-40">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "m-40"}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-100 mb-5vh" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-100 mb-5vh" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-5vh">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
