<h2 class="m-40">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "m-40"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, placeholder: "Name", class: "w-100 mb-5vh" %>
    </div>
    
    <div class="field">
    <%= f.text_field :photo, placeholder: "Photo URL", class: "w-100 mb-5vh" %>
    </div>
    
    <div class="field">
    <%= f.email_field :photo, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-100 mb-5vh" %>
    </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-100 mb-5vh", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 mb-5vh", placeholder: "Password confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
