<% @users.each do |user| %>
  <div class='container-users'>
    <%= image_tag user.photo %>
    <div class='user-content frame'>
      <h1><%= link_to user.name, user_path(user.id), class: 'link' %></h1>
      <h3 class='post-counter'>Number of posts:<%= user.posts_counter %></h3>
    </div>
  </div>
<% end %>